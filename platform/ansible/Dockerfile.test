# Dockerfile for testing Ansible playbooks locally
# Based on Ubuntu 22.04 (common target for deployments)
# Forces amd64 platform for consistency across architectures

FROM --platform=linux/amd64 ubuntu:22.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Fix GPG keys and install systemd and other essentials for realistic testing
RUN rm -rf /var/lib/apt/lists/* && \
    apt-get clean && \
    apt-get update --allow-insecure-repositories && \
    apt-get install -y --allow-unauthenticated ca-certificates && \
    apt-get update && \
    apt-get install -y \
    systemd \
    systemd-sysv \
    sudo \
    openssh-server \
    python3 \
    python3-pip \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create a user for Ansible to connect as (simulating remote server)
RUN useradd -m -s /bin/bash ansible && \
    echo "ansible ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Configure SSH
RUN mkdir /var/run/sshd && \
    echo "ansible:ansible" | chpasswd && \
    sed -i 's/#PermitRootLogin prohibit-password/PermitRootLogin yes/' /etc/ssh/sshd_config

# Expose SSH port
EXPOSE 22

# Use systemd as init system
CMD ["/lib/systemd/systemd"]
