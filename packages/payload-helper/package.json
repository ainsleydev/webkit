{
	"name": "@ainsleydev/payload-helper",
	"version": "0.0.40",
	"description": "Payload CMS utilities, collections and global types for ainsley.dev builds",
	"license": "MIT",
	"type": "module",
	"keywords": ["payload", "cms", "plugin", "typescript", "react"],
	"repository": {
		"type": "git",
		"url": "https://github.com/ainsleydev/webkit.git",
		"directory": "packages/payload-helper"
	},
	"author": {
		"name": "ainsley.dev",
		"email": "hello@ainsley.dev",
		"url": "https://ainsley.dev"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "pnpm clean && pnpm build:types && pnpm build:swc",
		"build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"format": "biome check --write --unsafe .",
		"lint": "biome lint --write .",
		"clean": "rimraf {dist,*.tsbuildinfo}",
		"test": "jest --passWithNoTests"
	},
	"bin": {
		"payload-helper": "bin.js"
	},
	"files": ["dist", "bin.js", "types.js", "types.ts", "types.d.ts"],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@lexical/headless": "0.38.2",
		"@lexical/html": "0.38.2",
		"@nouance/payload-better-fields-plugin": "^1.4.1",
		"@payloadcms/db-sqlite": "3.63.0",
		"@payloadcms/plugin-form-builder": "3.63.0",
		"@payloadcms/plugin-seo": "3.63.0",
		"@payloadcms/richtext-lexical": "3.63.0",
		"@types/json-schema": "^7.0.15",
		"chalk": "^5.3.0",
		"commander": "^12.1.0",
		"dotenv": "^17.2.3",
		"jsdom": "^24.1.1",
		"lexical": "0.28.0",
		"mime-types": "^2.1.35",
		"payload": "3.63.0"
	},
	"peerDependencies": {
		"@payloadcms/ui": "3.x",
		"next": "15.x || 16.x",
		"react": "^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
		"@ainsleydev/eslint-config": "workspace:*",
		"@jest/globals": "^29.7.0",
		"@payloadcms/ui": "3.63.0",
		"@swc/cli": "^0.7.8",
		"@swc/core": "^1.7.2",
		"@types/jest": "^29.5.12",
		"@types/jsdom": "^21.1.7",
		"@types/mime-types": "^2.1.4",
		"@types/node": "^24.10.1",
		"@types/react": "^18.3.26",
		"jest": "^29.7.0",
		"json-schema": "^0.4.0",
		"next": "^16.0.1",
		"react": "^19.2.0",
		"rimraf": "6.1.0",
		"ts-jest": "^29.2.3",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=9"
	},
	"pnpm": {
		"onlyBuiltDependencies": ["sharp"],
		"overrides": {
			"lexical": "0.28.0"
		}
	}
}
