{
	"name": "@ainsleydev/payload-helper",
	"version": "0.1.1",
	"description": "Payload CMS utilities, collections and global types for ainsley.dev builds",
	"license": "MIT",
	"type": "module",
	"keywords": ["payload", "cms", "plugin", "typescript", "react"],
	"repository": {
		"type": "git",
		"url": "https://github.com/ainsleydev/webkit.git",
		"directory": "packages/payload-helper"
	},
	"author": {
		"name": "ainsley.dev",
		"email": "hello@ainsley.dev",
		"url": "https://ainsley.dev"
	},
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./collections": {
			"types": "./dist/collections/index.d.ts",
			"import": "./dist/collections/index.js"
		},
		"./globals": {
			"types": "./dist/globals/index.d.ts",
			"import": "./dist/globals/index.js"
		},
		"./util": {
			"types": "./dist/util/index.d.ts",
			"import": "./dist/util/index.js"
		},
		"./common": {
			"types": "./dist/common/index.d.ts",
			"import": "./dist/common/index.js"
		},
		"./endpoints": {
			"types": "./dist/endpoints/index.d.ts",
			"import": "./dist/endpoints/index.js"
		},
		"./dist/admin/components/*": {
			"types": "./dist/admin/components/*.d.ts",
			"import": "./dist/admin/components/*.js",
			"default": "./dist/admin/components/*.js"
		},
		"./package.json": "./package.json"
	},
	"scripts": {
		"build": "pnpm clean && pnpm build:types && pnpm build:swc",
		"build:swc": "swc ./src -d ./dist --config-file .swcrc --strip-leading-paths",
		"build:types": "tsc --emitDeclarationOnly --outDir dist",
		"format": "biome check --write --unsafe .",
		"lint": "biome lint --write .",
		"clean": "rimraf {dist,*.tsbuildinfo}",
		"test": "vitest run"
	},
	"bin": {
		"payload-helper": "bin.js"
	},
	"files": ["dist", "bin.js", "types.js", "types.ts", "types.d.ts"],
	"publishConfig": {
		"access": "public"
	},
	"dependencies": {
		"@ainsleydev/email-templates": "workspace:*",
		"@lexical/headless": "0.38.2",
		"@lexical/html": "0.38.2",
		"@nouance/payload-better-fields-plugin": "^2.0.2",
		"@payloadcms/db-sqlite": "3.63.0",
		"@payloadcms/plugin-form-builder": "3.63.0",
		"@payloadcms/plugin-seo": "3.63.0",
		"@payloadcms/richtext-lexical": "3.63.0",
		"@types/json-schema": "^7.0.15",
		"chalk": "^5.3.0",
		"commander": "^14.0.2",
		"dotenv": "^16.4.5",
		"jsdom": "^27.2.0",
		"lexical": "0.38.2",
		"mime-types": "^3.0.1",
		"payload": "3.63.0"
	},
	"peerDependencies": {
		"@payloadcms/ui": "3.x",
		"next": "15.x || 16.x",
		"react": "^18.0.0 || ^19.0.0"
	},
	"devDependencies": {
		"@ainsleydev/eslint-config": "workspace:*",
		"@payloadcms/ui": "3.63.0",
		"@swc/cli": "^0.7.8",
		"@swc/core": "^1.7.2",
		"@types/jest": "^30.0.0",
		"@types/jsdom": "^27.0.0",
		"@types/mime-types": "^3.0.1",
		"@types/node": "^24.10.1",
		"@types/react": "^18.3.26",
		"jest": "^30.2.0",
		"json-schema": "^0.4.0",
		"next": "^16.0.1",
		"react": "^19.2.0",
		"rimraf": "6.1.0",
		"ts-node": "^10.9.2",
		"typescript": "^5.5.4",
		"vitest": "^4.0.14"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=9"
	}
}
