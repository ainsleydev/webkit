{
	"compilerOptions": {
		"outDir": "./dist",
		"rootDir": "./src",
		"composite": true,
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noEmit": false,
		"esModuleInterop": true,
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"incremental": true,
		"target": "ES2020"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "src/**/*.test.ts"]
}
