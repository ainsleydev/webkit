	"workspaces:": ["packages/*"],
	"scripts": {
		"precommit": "npx lint-staged",
		"prepare": "husky",
		"check": "pnpm format && pnpm lint && pnpm test",
		"format": "pnpm format:go && pnpm format:js",
		"format:go": "go fmt ./...",
		"format:js": "biome format --write .",
		"lint": "pnpm lint:go && pnpm lint:js",
