		"husky": "^9.0.11",
		"lint-staged": "^15.2.4",
		"prettier": "^3.2.5"
	},
	"lint-staged": {
		"*.{js,jsx,mjs,ts,tsx,css,scss,json,yaml,yml}": ["prettier --write ."],
		"*.{js,ts}": "eslint --fix"
	},
	"engines": {
		"node": ">=18",
		"pnpm": ">=9"
	},
	"packageManager": "pnpm@9.1.4"
