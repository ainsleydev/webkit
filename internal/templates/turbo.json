{
	"$schema": "https://turborepo.com/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"inputs": ["$TURBO_DEFAULT$", ".env*"]
		},
		"lint": {
			"dependsOn": ["^lint"]
		},
		"lint:fix": {
			"dependsOn": ["^lint:fix"]
		},
		"test": {
			"dependsOn": ["^test"]
		},
		"format": {
			"dependsOn": ["^format"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		}
	}
}
