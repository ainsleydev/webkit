# Ref: editorconfig.org

root = true

[*]
indent_size = 4
indent_style = tab
max_line_length = 100

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_size = 2
indent_style = space

[*.{md,markdown}]
indent_size = tab
trim_trailing_whitespace = false

[*.{tf,tfvars}]
indent_size = 2
indent_style = space
