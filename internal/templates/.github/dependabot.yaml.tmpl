version: 2
enable-beta-ecosystems: true
updates:
{{- if .ContainsJS }}
  - package-ecosystem: "npm"
    directory: "/"
    schedule:
      interval: "weekly"
      day: "sunday"
      time: "04:00"
    open-pull-requests-limit: 30
    ignore:
      # Ignore patch updates to reduce PR volume
      - dependency-name: "*"
        update-types: ["version-update:semver-patch"]
      {{- if .HasAppType "payload" }}
      # Payload ecosystem is managed via 'webkit payload bump' command
      # These dependencies are automatically updated when running that command
      - dependency-name: "payload"
      - dependency-name: "@payloadcms/*"
      - dependency-name: "@ainsleydev/payload-helper"
      # Lexical dependencies are managed by Payload
      - dependency-name: "lexical"
      - dependency-name: "@lexical/*"
      {{- end }}
    groups:
      svelte:
        patterns:
          - "svelte"
          - "@sveltejs/*"
        update-types:
          - "minor"
          - "patch"
      react:
        patterns:
          - "next"
          - "react"
          - "react-dom"
        update-types:
          - "minor"
          - "patch"
      dependencies:
        patterns:
          - "*"
        exclude-patterns:
          {{- if .HasAppType "payload" }}
          - "payload"
          - "@payloadcms/*"
          - "@ainsleydev/payload-helper"
          - "lexical"
          - "@lexical/*"
          {{- end }}
          - "svelte"
          - "@sveltejs/*"
          - "next"
          - "react"
          - "react-dom"
{{- end }}
{{- range .Apps }}
{{- if eq .Language "go" }}
  - package-ecosystem: "gomod"
    directory: "/{{ .Path }}"
    schedule:
      interval: "weekly"
      day: "sunday"
      time: "04:00"
    open-pull-requests-limit: 30
    ignore:
      - dependency-name: "*"
        update-types: ["version-update:semver-patch"]
    groups:
      dependencies:
        patterns:
          - "*"
{{- end }}
{{- end }}
