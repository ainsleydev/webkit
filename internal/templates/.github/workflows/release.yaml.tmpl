name: Release

on:
  workflow_dispatch:
  push:
    branches:
      - main

permissions:
  contents: read
  packages: write

# Prevent concurrent deployments.
concurrency:
  group: {{ ghVar "github.workflow" }}-{{ ghVar "github.ref" }}
  cancel-in-progress: true

env:
  TF_VERSION: '{{ .TerraformVersion }}'

jobs:
  # Setup WebKit CLI
  setup-webkit:
    runs-on: ubuntu-latest
    outputs:
      version: {{ ghVar "steps.version.outputs.version" }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Read WebKit Version
        id: version
        shell: bash
        run: |
          WEBKIT_VERSION=$(jq -r '.webkit_version // "latest"' "app.json")
          echo "version=$WEBKIT_VERSION" >> $GITHUB_OUTPUT
          echo "Detected WebKit version: $WEBKIT_VERSION"

      - name: Download WebKit Release Asset
        id: setup
        uses: robinraju/release-downloader@v1
        with:
          repository: 'ainsleydev/webkit'
          tag: {{ ghVar "steps.version.outputs.version" }}
          fileName: 'webkit_linux_x86_64.tar.gz'
          extract: true

      - name: Upload WebKit CLI Artifact
        uses: actions/upload-artifact@v4
        with:
          name: webkit
          path: webkit
          if-no-files-found: error

  # Build Containers
  build-and-push:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        service:
{{- range .Apps }}
          - name: {{ .Name }}
            context: ./{{ .Path }}
            dockerfile: ./{{ .Path }}/{{ .Build.Dockerfile }}
{{- end }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Set up QEMU
        uses: docker/setup-qemu-action@v3

      - name: Set up Docker Buildx
        uses: docker/setup-buildx-action@v3
        with:
          driver: docker-container

      - name: Log in to GitHub Container Registry
        uses: docker/login-action@v3
        with:
          registry: ghcr.io
          username: {{ ghVar "github.actor" }}
          password: {{ ghSecret "GITHUB_TOKEN" }}

      - name: Extract metadata (tags, labels)
        id: meta
        uses: docker/metadata-action@v5
        with:
          images: ghcr.io/{{ ghVar "github.repository_owner" }}/{{ ghVar "github.event.repository.name" }}-{{ ghVar "matrix.service.name" }}
          tags: |
            type=raw,value=latest
            type=sha,format=long

      - name: Build and push Docker image
        uses: docker/build-push-action@v6
        with:
          context: {{ ghVar "matrix.service.context" }}
          file: {{ ghVar "matrix.service.dockerfile" }}
          push: true
          platforms: linux/amd64
          tags: {{ ghVar "steps.meta.outputs.tags" }}
          labels: {{ ghVar "steps.meta.outputs.labels" }}
          cache-from: type=registry,ref=ghcr.io/{{ ghVar "github.repository_owner" }}/{{ ghVar "github.event.repository.name" }}-{{ ghVar "matrix.service.name" }}:cache
          cache-to: type=registry,ref=ghcr.io/{{ ghVar "github.repository_owner" }}/{{ ghVar "github.event.repository.name" }}-{{ ghVar "matrix.service.name" }}:cache,mode=max

  # Remove Unwanted Containers
  cleanup-containers:
    runs-on: ubuntu-latest
    needs: build-and-push
    permissions:
      packages: write
    strategy:
      matrix:
        service: [{{ range $i, $app := .Apps }}{{ if $i }}, {{ end }}{{ $app.Name }}{{ end }}]
    steps:
      - name: Delete old images from GHCR
        uses: actions/delete-package-versions@v5
        with:
          package-name: '{{ ghVar "github.event.repository.name" }}-{{ ghVar "matrix.service" }}'
          package-type: 'container'
          min-versions-to-keep: 5
          delete-only-untagged-versions: false

  # Terraform Apply - Production
  # Strategy: Run plan to detect SHA-only changes, then conditionally skip apply.
  # SHA-only changes (container image updates) are handled by deploy jobs, not terraform.
  # Note: Plan runs twice for real infrastructure changes (once here, once in apply).
  # Future optimisation: Save plan file and pass to apply (requires webkit CLI changes).
  terraform-apply-production:
    runs-on: ubuntu-latest
    needs: [setup-webkit, build-and-push]
    env:
      SOPS_AGE_KEY: {{ ghSecret "ORG_AGE_SECRET" }}
      DO_API_KEY: ${{"{{"}} secrets.REPO_DO_ACCESS_TOKEN || secrets.ORG_DO_ACCESS_TOKEN {{ "}}" }}
      DO_SPACES_ACCESS_KEY: ${{"{{"}} secrets.REPO_DO_SPACES_ACCESS_KEY || secrets.ORG_DO_SPACES_ACCESS_KEY {{ "}}" }}
      DO_SPACES_SECRET_KEY: ${{"{{"}} secrets.REPO_DO_SPACES_SECRET_KEY || secrets.ORG_DO_SPACES_SECRET_KEY {{ "}}" }}
      HETZNER_TOKEN: ${{"{{"}} secrets.REPO_HETZNER_TOKEN || secrets.ORG_HETZNER_TOKEN {{ "}}" }}
      BACK_BLAZE_BUCKET: {{ ghSecret "ORG_BACK_BLAZE_TF_BUCKET" }}
      BACK_BLAZE_KEY_ID: {{ ghSecret "ORG_BACK_BLAZE_KEY_ID" }}
      BACK_BLAZE_APPLICATION_KEY: {{ ghSecret "ORG_BACK_BLAZE_APPLICATION_KEY" }}
      TURSO_TOKEN: {{ ghSecret "ORG_TURSO_TOKEN" }}
      GITHUB_TOKEN: {{ ghSecret "ORG_GITHUB_TOKEN" }}
      GITHUB_TOKEN_CLASSIC: {{ ghSecret "ORG_GITHUB_TOKEN_CLASSIC" }}
      SLACK_BOT_TOKEN: {{ ghSecret "ORG_SLACK_BOT_TOKEN" }}
      SLACK_USER_TOKEN: {{ ghSecret "ORG_SLACK_USER_TOKEN" }}
      UPTIME_KUMA_URL: {{ ghSecret "ORG_UPTIME_KUMA_URL" }}
      UPTIME_KUMA_USERNAME: {{ ghSecret "ORG_UPTIME_KUMA_USERNAME" }}
      UPTIME_KUMA_PASSWORD: {{ ghSecret "ORG_UPTIME_KUMA_PASSWORD" }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 0  # Full history for accurate comparison

      - name: Download WebKit CLI Artifact
        uses: actions/download-artifact@v4
        with:
          name: webkit
          path: ./

      - name: Make WebKit executable
        run: chmod +x ./webkit

      - name: Setup Infrastructure Dependencies
        uses: ./.github/actions/setup-infra
        with:
          terraform_version: {{ ghVar "env.TF_VERSION" }}

      - name: Detect Infrastructure Changes
        id: changes
        uses: ./.github/actions/detect-infra-changes
        with:
          base_ref: HEAD~1

      - name: Run Terraform Plan
        if: steps.changes.outputs.skip_terraform != 'true'
        id: plan
        run: |
          echo "üîç Running terraform plan for production environment..."

          if ./webkit infra plan --silent > plan-output.txt 2>&1; then
            plan_exit_code=0
          else
            plan_exit_code=$?
          fi

          # Check if there are changes in the plan output.
          if grep -q "No changes" plan-output.txt || grep -q "0 to add, 0 to change, 0 to destroy" plan-output.txt; then
            echo "changes_detected=false" >> $GITHUB_OUTPUT
            echo "sha_only=false" >> $GITHUB_OUTPUT
            status_emoji="üü¢"
            status_text="No infrastructure changes"
          else
            # Detect if changes are SHA-only (image tag updates).
            sha_changes=$(grep -E '^\s*~\s+tag\s+=.*"sha-[a-f0-9]+".*->.*"sha-[a-f0-9]+"' plan-output.txt || true)
            other_changes=$(grep -E '^\s*~\s+\w+\s+=.*' plan-output.txt | grep -v -E 'tag\s+=.*"sha-[a-f0-9]+".*->.*"sha-[a-f0-9]+"' || true)

            # If we have SHA changes but no other changes, it's SHA-only.
            if [ -n "$sha_changes" ] && [ -z "$other_changes" ]; then
              echo "changes_detected=true" >> $GITHUB_OUTPUT
              echo "sha_only=true" >> $GITHUB_OUTPUT
              status_emoji="üü¢"
              status_text="SHA-only deployment update"
            else
              echo "changes_detected=true" >> $GITHUB_OUTPUT
              echo "sha_only=false" >> $GITHUB_OUTPUT
              status_emoji="üü°"
              status_text="Infrastructure changes detected"
            fi
          fi

          # Format Slack message.
          {
            echo 'slack_message<<EOF'
            echo "*Infra Plan*"
            echo ""
            echo "$status_emoji **$status_text**"
            echo "\`\`\`"
            cat plan-output.txt | head -50
            echo "\`\`\`"
            echo ""
            echo "_Commit:_ {{ ghVar "github.sha" }}"
            echo "_Workflow:_ https://github.com/{{ ghVar "github.repository" }}/actions/runs/{{ ghVar "github.run_id" }}"
            echo 'EOF'
          } >> $GITHUB_OUTPUT

          exit $plan_exit_code

      - name: Run Terraform Apply
        if: steps.changes.outputs.skip_terraform != 'true' && steps.plan.outputs.sha_only != 'true' && steps.plan.outputs.changes_detected == 'true'
        run: |
          echo "üöÄ Applying terraform changes for production environment..."
          # TODO: Uncomment when ready to apply changes.
          # ./webkit infra apply --silent
          echo "‚ö†Ô∏è  Apply is currently disabled - remove this comment to enable"

      - name: Skip Terraform - No Infrastructure Changes
        if: steps.changes.outputs.skip_terraform == 'true'
        run: |
          echo "‚è≠Ô∏è  Skipping terraform plan and apply - {{ ghVar "steps.changes.outputs.reason" }}"

      - name: Skip Apply for SHA-only Changes
        if: steps.changes.outputs.skip_terraform != 'true' && steps.plan.outputs.sha_only == 'true'
        run: |
          echo "‚è≠Ô∏è  Skipping terraform apply - only container image SHA changes detected"
          echo "Deploy jobs will handle the container image updates"

      - name: Send Slack Notification
        if: steps.changes.outputs.skip_terraform != 'true' && steps.plan.outputs.changes_detected == 'true' && steps.plan.outputs.sha_only != 'true'
        uses: ./.github/actions/slack-notify
        with:
          title: 'Infra Plan'
          message: {{ ghVar "steps.plan.outputs.slack_message" }}
          status: {{ ghVar "steps.plan.outcome" }}
          commit_sha: {{ ghVar "github.sha" }}
          slack_bot_token: {{ ghSecret "ORG_SLACK_BOT_TOKEN" }}
          channel_id: {{ ghSecret "TF_SLACK_CHANNEL_ID" }}

{{- range .Apps }}
{{- if and (eq .Infra.Provider "digitalocean") (eq .Infra.Type "container") }}

  # Deploy {{ .Title }} to DigitalOcean App Platform
  deploy-app-{{ .Name }}:
    runs-on: ubuntu-latest
    needs: [build-and-push, terraform-apply-production]
    environment:
      name: production-{{ .Name }}
      {{- if .PrimaryDomain }}
      url: https://{{ .PrimaryDomain }}
      {{- end }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Deploy {{ .Title }} to DigitalOcean App Platform
        uses: digitalocean/app_action/deploy@v2
        env:
          IMAGE_TAG_{{ printf "%s" .Type  | upper | replace "-" "_" }}: sha-{{ ghVar "github.sha" }}
        with:
          token: ${{"{{"}} secrets.REPO_DO_ACCESS_TOKEN || secrets.ORG_DO_ACCESS_TOKEN {{ "}}" }}
          app_name: '{{ $.ProjectName }}-{{ .Name }}'
{{- end }}
{{- end }}

{{- range .Apps }}
{{- if and (or (eq .Infra.Provider "digitalocean") (eq .Infra.Provider "hetzner")) (eq .Infra.Type "vm") }}

  # Deploy {{ .Title }} to {{ if eq .Infra.Provider "digitalocean" }}DigitalOcean{{ else }}Hetzner{{ end }} VM
  deploy-vm-{{ .Name }}:
    runs-on: ubuntu-latest
    needs: [build-and-push, setup-webkit, terraform-apply-production]
    environment:
      name: production-{{ .Name }}
      {{- if .PrimaryDomain }}
      url: https://{{ .PrimaryDomain }}
      {{- end }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Checkout WebKit Repository
        uses: actions/checkout@v5
        with:
          repository: 'ainsleydev/webkit'
          ref: {{ ghVar "needs.setup-webkit.outputs.version" }}
          path: '.webkit-repo'

      - name: Copy Ansible Files
        run: |
          cp -r .webkit-repo/platform/ansible ./
          echo "Copied ansible files from WebKit {{ ghVar "needs.setup-webkit.outputs.version" }}"

      - name: Download WebKit CLI Artifact
        uses: actions/download-artifact@v4
        with:
          name: webkit
          path: ./

      - name: Make WebKit executable
        run: chmod +x ./webkit

      - name: Setup Infrastructure Dependencies
        uses: ./.github/actions/setup-infra
        with:
          terraform_version: {{ ghVar "env.TF_VERSION" }}

      - name: Generate production env file for {{ .Title }}
        env:
          SOPS_AGE_KEY: {{ ghSecret "ORG_AGE_SECRET" }}
          DO_API_KEY: ${{"{{"}} secrets.REPO_DO_ACCESS_TOKEN || secrets.ORG_DO_ACCESS_TOKEN {{ "}}" }}
          DO_SPACES_ACCESS_KEY: ${{"{{"}} secrets.REPO_DO_SPACES_ACCESS_KEY || secrets.ORG_DO_SPACES_ACCESS_KEY {{ "}}" }}
          DO_SPACES_SECRET_KEY: ${{"{{"}} secrets.REPO_DO_SPACES_SECRET_KEY || secrets.ORG_DO_SPACES_SECRET_KEY {{ "}}" }}
          HETZNER_TOKEN: ${{"{{"}} secrets.REPO_HETZNER_TOKEN || secrets.ORG_HETZNER_TOKEN {{ "}}" }}
          BACK_BLAZE_BUCKET: {{ ghSecret "ORG_BACK_BLAZE_TF_BUCKET" }}
          BACK_BLAZE_KEY_ID: {{ ghSecret "ORG_BACK_BLAZE_KEY_ID" }}
          BACK_BLAZE_APPLICATION_KEY: {{ ghSecret "ORG_BACK_BLAZE_APPLICATION_KEY" }}
          TURSO_TOKEN: {{ ghSecret "ORG_TURSO_TOKEN" }}
          GITHUB_TOKEN: {{ ghSecret "ORG_GITHUB_TOKEN" }}
          GITHUB_TOKEN_CLASSIC: {{ ghSecret "ORG_GITHUB_TOKEN_CLASSIC" }}
          SLACK_BOT_TOKEN: {{ ghSecret "ORG_SLACK_BOT_TOKEN" }}
          SLACK_USER_TOKEN: {{ ghSecret "ORG_SLACK_USER_TOKEN" }}
        run: |
          ./webkit env generate \
            --app {{ .Name }} \
            --environment production \
            --output /tmp/{{ .Name }}.env
          echo "Generated .env file for {{ .Name }}"

      - name: Verify env file was generated
        run: |
          if [ ! -f /tmp/{{ .Name }}.env ]; then
            echo "ERROR: Environment file was not generated at /tmp/{{ .Name }}.env"
            exit 1
          fi
          echo "‚úì Environment file exists at /tmp/{{ .Name }}.env"
          echo "‚úì Environment file size: $(wc -l < /tmp/{{ .Name }}.env) lines"
          echo "‚úì Environment file contains $(grep -c '=' /tmp/{{ .Name }}.env || echo 0) variables"

      - name: Determine SHA
        id: determine_sha
        run: |
          echo "sha={{ ghVar "github.sha" }}" >> $GITHUB_OUTPUT

      - name: Run Ansible playbook for {{ .Title }}
        uses: dawidd6/action-ansible-playbook@v4
        with:
          playbook: playbooks/server.yaml
          directory: ansible
          key: {{ ghSecret (printf "TF_PROD_%s_SSH_PRIVATE_KEY" (.Name | upper | replace "-" "_")) }}
          inventory: |
            [all]
            {{ .Name }} ansible_host={{ ghSecret (printf "TF_PROD_%s_IP_ADDRESS" (.Name | upper | replace "-" "_")) }} ansible_user={{ ghSecret (printf "TF_PROD_%s_SERVER_USER" (.Name | upper | replace "-" "_")) }}
          options: |
            -e webkit_version={{ ghVar "needs.setup-webkit.outputs.version" }}
            -e age_secret_key={{ ghSecret "ORG_AGE_SECRET" }}
            -e app_name={{ .Name }}
            -e env_name=production
            -e git_sha={{ ghVar "steps.determine_sha.outputs.sha" }}
            -e github_user={{ ghVar "github.repository_owner" }}
            -e github_token={{ ghSecret "GITHUB_TOKEN" }}
            -e domain={{ .PrimaryDomain }}
            -e docker_image={{ ghVar "github.event.repository.name" }}-{{ .Name }}
            -e docker_image_tag=sha-{{ ghVar "steps.determine_sha.outputs.sha" }}
            -e docker_port={{ .Build.Port }}
            -e enable_https={{ if eq (index .Infra.Config "https") false }}false{{ else }}{{ default "true" (index .Infra.Config "https") }}{{ end }}
            -e admin_email={{ default "hello@ainsley.dev" (index .Infra.Config "admin_email") }}
            -e env_file_source_path=/tmp/{{ .Name }}.env
            -v
{{- end }}
{{- end }}

  # Notify Slack on successful release
  notify-success:
    runs-on: ubuntu-latest
    needs: [{{- range $i, $app := .Apps }}{{- if and (eq $app.Infra.Provider "digitalocean") (or (eq $app.Infra.Type "container") (eq $app.Infra.Type "vm")) }}{{- if $i }}, {{ end }}{{- if eq $app.Infra.Type "container" }}deploy-app-{{ $app.Name }}{{- else }}deploy-vm-{{ $app.Name }}{{- end }}{{- end }}{{- end }}]
    if: success()
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Build domain buttons
        id: buttons
        run: |
          # Build JSON array of domain buttons for deployed apps
          BUTTONS='[{{- $first := true }}{{- range .Apps }}{{- if .PrimaryDomain }}{{- if not $first }},{{ end }}{{- $first = false }}{"text":"View {{ .Title }}","url":"https://{{ .PrimaryDomain }}"}{{- end }}{{- end }}]'
          echo "buttons=$BUTTONS" >> $GITHUB_OUTPUT

      - name: Send Success Notification
        uses: ./.github/actions/slack-notify
        with:
          title: 'Release Successful'
          message: 'All applications have been successfully deployed to production.\n\n*Deployed Apps:*\n{{ range .Apps }}- {{ .Title }}{{ if .PrimaryDomain }} ({{ .PrimaryDomain }}){{ end }}\n{{ end }}'
          status: 'success'
          commit_sha: {{ ghVar "github.sha" }}
          slack_bot_token: {{ ghSecret "ORG_SLACK_BOT_TOKEN" }}
          channel_id: {{ ghSecret "TF_SLACK_CHANNEL_ID" }}
          buttons: {{ ghVar "steps.buttons.outputs.buttons" }}

  # Notify Slack on release failure
  notify-failure:
    runs-on: ubuntu-latest
    needs: [build-and-push{{- range $app := .Apps }}{{- if and (eq $app.Infra.Provider "digitalocean") (or (eq $app.Infra.Type "container") (eq $app.Infra.Type "vm")) }}, {{- if eq $app.Infra.Type "container" }}deploy-app-{{ $app.Name }}{{- else }}deploy-vm-{{ $app.Name }}{{- end }}{{- end }}{{- end }}]
    if: failure()
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Build domain buttons
        id: buttons
        run: |
          # Build JSON array of domain buttons for deployed apps
          BUTTONS='[{{- $first := true }}{{- range .Apps }}{{- if .PrimaryDomain }}{{- if not $first }},{{ end }}{{- $first = false }}{"text":"View {{ .Title }}","url":"https://{{ .PrimaryDomain }}"}{{- end }}{{- end }}]'
          echo "buttons=$BUTTONS" >> $GITHUB_OUTPUT

      - name: Send Failure Notification
        uses: ./.github/actions/slack-notify
        with:
          title: 'Release Failed'
          message: 'One or more steps in the release pipeline failed. The release pipeline has been halted and applications may not be running the latest code.\n\n*Apps:*\n{{ range .Apps }}- {{ .Title }}{{ if .PrimaryDomain }} ({{ .PrimaryDomain }}){{ end }}\n{{ end }}'
          status: 'failure'
          commit_sha: {{ ghVar "github.sha" }}
          slack_bot_token: {{ ghSecret "ORG_SLACK_BOT_TOKEN" }}
          channel_id: {{ ghSecret "TF_SLACK_CHANNEL_ID" }}
          buttons: {{ ghVar "steps.buttons.outputs.buttons" }}
