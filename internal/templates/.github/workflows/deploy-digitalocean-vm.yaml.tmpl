name: Deploy DigitalOcean VM

on:
  workflow_dispatch:
    inputs:
      app_name:
        description: 'Application to deploy'
        required: true
        type: choice
        options:
{{- range .Apps }}
{{- if and (eq .Infra.Provider "digitalocean") (eq .Infra.Type "vm") }}
          - {{ .Name }}
{{- end }}
{{- end }}
      image_tag:
        description: 'Image tag to deploy (e.g., sha-abc123 or latest)'
        required: false
        type: string
        default: 'latest'
      webkit_version:
        description: 'WebKit version (defaults to version in app.json)'
        required: false
        type: string
  workflow_call:
    inputs:
      app_name:
        description: 'Application to deploy'
        required: true
        type: string
      image_tag:
        description: 'Image tag to deploy (e.g., sha-abc123 or latest)'
        required: false
        type: string
        default: 'latest'
      webkit_version:
        description: 'WebKit version'
        required: false
        type: string
    secrets:
      ORG_AGE_SECRET:
        required: true
      ORG_DO_ACCESS_TOKEN:
        required: true
      ORG_DO_SPACES_ACCESS_KEY:
        required: true
      ORG_DO_SPACES_SECRET_KEY:
        required: true
      ORG_BACK_BLAZE_TF_BUCKET:
        required: true
      ORG_BACK_BLAZE_KEY_ID:
        required: true
      ORG_BACK_BLAZE_APPLICATION_KEY:
        required: true
      ORG_GITHUB_TOKEN:
        required: true
      ORG_GITHUB_TOKEN_CLASSIC:
        required: true

permissions:
  contents: read
  packages: read

# Prevent concurrent deployments for the same app.
concurrency:
  group: deploy-do-vm-{{ ghVar "github.event.inputs.app_name || inputs.app_name" }}-{{ ghVar "github.ref" }}
  cancel-in-progress: true

env:
  TF_VERSION: '{{ .TerraformVersion }}'

jobs:
  # Setup WebKit CLI (only for manual triggers)
  setup-webkit:
    runs-on: ubuntu-latest
    if: github.event_name == 'workflow_dispatch'
    outputs:
      version: {{ ghVar "steps.version.outputs.version" }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Read WebKit Version
        id: version
        shell: bash
        run: |
          if [ -n "{{ ghVar "inputs.webkit_version" }}" ]; then
            WEBKIT_VERSION="{{ ghVar "inputs.webkit_version" }}"
          else
            WEBKIT_VERSION=$(jq -r '.webkit_version // "latest"' "app.json")
          fi
          echo "version=$WEBKIT_VERSION" >> $GITHUB_OUTPUT
          echo "Detected WebKit version: $WEBKIT_VERSION"

      - name: Download WebKit Release Asset
        id: setup
        uses: robinraju/release-downloader@v1
        with:
          repository: 'ainsleydev/webkit'
          tag: {{ ghVar "steps.version.outputs.version" }}
          fileName: 'webkit_linux_x86_64.tar.gz'
          extract: true

      - name: Upload WebKit CLI Artifact
        uses: actions/upload-artifact@v4
        with:
          name: webkit
          path: webkit
          if-no-files-found: error

{{- range .Apps }}
{{- if and (eq .Infra.Provider "digitalocean") (eq .Infra.Type "vm") }}
  # Deploy {{ .Title }} to DigitalOcean VM
  deploy-{{ .Name }}:
    runs-on: ubuntu-latest
    needs: [setup-webkit]
    if: (github.event.inputs.app_name == '{{ .Name }}' || inputs.app_name == '{{ .Name }}') && (github.event_name == 'workflow_dispatch' || needs.setup-webkit.result == 'skipped')
    environment:
      name: production-{{ .Name }}
      {{- if .PrimaryDomain }}
      url: https://{{ .PrimaryDomain }}
      {{- end }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Checkout WebKit Repository
        uses: actions/checkout@v5
        with:
          repository: 'ainsleydev/webkit'
          ref: {{ ghVar "inputs.webkit_version || needs.setup-webkit.outputs.version" }}
          path: '.webkit-repo'

      - name: Copy Ansible Files
        run: |
          cp -r .webkit-repo/platform/ansible ./
          echo "Copied ansible files from WebKit"

      - name: Download WebKit CLI Artifact
        uses: actions/download-artifact@v4
        with:
          name: webkit
          path: ./

      - name: Make WebKit executable
        run: chmod +x ./webkit

      - name: Install Terraform
        uses: hashicorp/setup-terraform@v3
        with:
          terraform_version: {{ ghVar "env.TF_VERSION" }}

      - name: Install SOPS
        run: |
          curl -LO https://github.com/getsops/sops/releases/download/v3.11.0/sops-v3.11.0.linux.amd64
          sudo mv sops-v3.11.0.linux.amd64 /usr/local/bin/sops
          sudo chmod +x /usr/local/bin/sops
          sops --version

      - name: Generate production env file for {{ .Title }}
        env:
          SOPS_AGE_KEY: {{ ghSecret "ORG_AGE_SECRET" }}
          DO_API_KEY: {{ ghSecret "ORG_DO_ACCESS_TOKEN" }}
          DO_SPACES_ACCESS_KEY: {{ ghSecret "ORG_DO_SPACES_ACCESS_KEY" }}
          DO_SPACES_SECRET_KEY: {{ ghSecret "ORG_DO_SPACES_SECRET_KEY" }}
          BACK_BLAZE_BUCKET: {{ ghSecret "ORG_BACK_BLAZE_TF_BUCKET" }}
          BACK_BLAZE_KEY_ID: {{ ghSecret "ORG_BACK_BLAZE_KEY_ID" }}
          BACK_BLAZE_APPLICATION_KEY: {{ ghSecret "ORG_BACK_BLAZE_APPLICATION_KEY" }}
          GITHUB_TOKEN: {{ ghSecret "ORG_GITHUB_TOKEN" }}
          GITHUB_TOKEN_CLASSIC: {{ ghSecret "ORG_GITHUB_TOKEN_CLASSIC" }}
        run: |
          ./webkit env generate \
            --app {{ .Name }} \
            --environment production \
            --output /tmp/{{ .Name }}.env
          echo "Generated .env file for {{ .Name }}"

      - name: Verify env file was generated
        run: |
          if [ ! -f /tmp/{{ .Name }}.env ]; then
            echo "ERROR: Environment file was not generated at /tmp/{{ .Name }}.env"
            exit 1
          fi
          echo "✓ Environment file exists at /tmp/{{ .Name }}.env"
          echo "✓ Environment file size: $(wc -l < /tmp/{{ .Name }}.env) lines"
          echo "✓ Environment file contains $(grep -c '=' /tmp/{{ .Name }}.env || echo 0) variables"

      - name: Run Ansible playbook for {{ .Title }}
        uses: dawidd6/action-ansible-playbook@v4
        with:
          playbook: playbooks/server.yaml
          directory: ansible
          key: {{ ghSecret (printf "TF_PROD_%s_SSH_PRIVATE_KEY" (.Name | upper | replace "-" "_")) }}
          inventory: |
            [all]
            {{ .Name }} ansible_host={{ ghSecret (printf "TF_PROD_%s_IP_ADDRESS" (.Name | upper | replace "-" "_")) }} ansible_user={{ ghSecret (printf "TF_PROD_%s_SERVER_USER" (.Name | upper | replace "-" "_")) }}
          options: |
            -e webkit_version={{ ghVar "inputs.webkit_version || needs.setup-webkit.outputs.version" }}
            -e age_secret_key={{ ghSecret "ORG_AGE_SECRET" }}
            -e app_name={{ .Name }}
            -e env_name=production
            -e git_sha={{ ghVar "inputs.image_tag" }}
            -e github_user={{ ghVar "github.repository_owner" }}
            -e github_token={{ ghSecret "GITHUB_TOKEN" }}
            -e domain={{ .PrimaryDomain }}
            -e docker_image={{ ghVar "github.event.repository.name" }}-{{ .Name }}
            -e docker_image_tag={{ ghVar "inputs.image_tag" }}
            -e docker_port={{ .Build.Port }}
            -e enable_https={{ if eq (index .Infra.Config "https") false }}false{{ else }}{{ default "true" (index .Infra.Config "https") }}{{ end }}
            -e admin_email={{ default "hello@ainsley.dev" (index .Infra.Config "admin_email") }}
            -e env_file_source_path=/tmp/{{ .Name }}.env
            -v
{{- end }}
{{- end }}
