name: Deploy App

on:
  workflow_dispatch:
    inputs:
      app_name:
        description: 'Application to deploy'
        required: true
        type: choice
        options:
{{- range .Apps }}
{{- if and .Build.Dockerfile (eq .Infra.Provider "digitalocean") }}
          - {{ .Name }}
{{- end }}
{{- end }}
      image_tag:
        description: 'Image tag to deploy (e.g., sha-abc123 or latest)'
        required: false
        type: string
        default: 'latest'
      webkit_version:
        description: 'WebKit version (only for VM apps, defaults to version in app.json)'
        required: false
        type: string

permissions:
  contents: read
  packages: read

# Prevent concurrent deployments for the same app.
concurrency:
  group: deploy-app-{{ ghVar "github.event.inputs.app_name" }}-{{ ghVar "github.ref" }}
  cancel-in-progress: true

env:
  TF_VERSION: '{{ .TerraformVersion }}'

jobs:
{{- $vmApps := list }}
{{- $containerApps := list }}
{{- range .Apps }}
  {{- if and (eq .Infra.Provider "digitalocean") (eq .Infra.Type "vm") }}
    {{- $vmApps = append $vmApps .Name }}
  {{- end }}
  {{- if and (eq .Infra.Provider "digitalocean") (eq .Infra.Type "container") }}
    {{- $containerApps = append $containerApps .Name }}
  {{- end }}
{{- end }}

{{- if gt (len $vmApps) 0 }}
  # Setup WebKit CLI for VM deployments
  setup-webkit:
    runs-on: ubuntu-latest
    if: {{ range $i, $name := $vmApps }}{{ if $i }} || {{ end }}github.event.inputs.app_name == '{{ $name }}'{{ end }}
    outputs:
      version: {{ ghVar "steps.version.outputs.version" }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Read WebKit Version
        id: version
        shell: bash
        run: |
          if [ -n "{{ ghVar "inputs.webkit_version" }}" ]; then
            WEBKIT_VERSION="{{ ghVar "inputs.webkit_version" }}"
          else
            WEBKIT_VERSION=$(jq -r '.webkit_version // "latest"' "app.json")
          fi
          echo "version=$WEBKIT_VERSION" >> $GITHUB_OUTPUT
          echo "Detected WebKit version: $WEBKIT_VERSION"

      - name: Download WebKit Release Asset
        id: setup
        uses: robinraju/release-downloader@v1
        with:
          repository: 'ainsleydev/webkit'
          tag: {{ ghVar "steps.version.outputs.version" }}
          fileName: 'webkit_linux_x86_64.tar.gz'
          extract: true

      - name: Upload WebKit CLI Artifact
        uses: actions/upload-artifact@v4
        with:
          name: webkit
          path: webkit
          if-no-files-found: error
{{- end }}

{{- if gt (len $vmApps) 0 }}
  # Route to VM deployment workflow
  deploy-vm:
    needs: [setup-webkit]
    if: {{ range $i, $name := $vmApps }}{{ if $i }} || {{ end }}github.event.inputs.app_name == '{{ $name }}'{{ end }}
    uses: ./.github/workflows/deploy-vm.yaml
    with:
      app_name: {{ ghVar "github.event.inputs.app_name" }}
      image_tag: {{ ghVar "github.event.inputs.image_tag" }}
      webkit_version: {{ ghVar "needs.setup-webkit.outputs.version" }}
    secrets: inherit
{{- end }}

{{- if gt (len $containerApps) 0 }}
  # Route to Container deployment workflow
  deploy-container:
    if: {{ range $i, $name := $containerApps }}{{ if $i }} || {{ end }}github.event.inputs.app_name == '{{ $name }}'{{ end }}
    uses: ./.github/workflows/deploy-container.yaml
    with:
      app_name: {{ ghVar "github.event.inputs.app_name" }}
      image_tag: {{ ghVar "github.event.inputs.image_tag" }}
    secrets: inherit
{{- end }}
