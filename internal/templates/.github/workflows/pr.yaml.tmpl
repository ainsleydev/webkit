name: PR

on:
  workflow_dispatch:
  pull_request:
    branches:
      - main
      - master

# Only allow one of these to run per branch
concurrency:
  group: {{ ghVar "github.workflow" }}-{{ ghVar "github.ref" }}
  cancel-in-progress: true

permissions:
  contents: read
  pull-requests: write
  issues: write

env:
  TF_VERSION: '{{ .TerraformVersion }}'

jobs:
  setup-webkit:
    runs-on: ubuntu-latest
    outputs:
      version: {{ ghVar "steps.version.outputs.version" }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Read WebKit Version
        id: version
        shell: bash
        run: |
          WEBKIT_VERSION=$(jq -r '.webkit_version // "latest"' "app.json")
          echo "version=$WEBKIT_VERSION" >> $GITHUB_OUTPUT
          echo "Detected WebKit version: $WEBKIT_VERSION"

      - name: Download WebKit Release Asset
        id: setup
        uses: robinraju/release-downloader@v1
        with:
          repository: 'ainsleydev/webkit'
          tag: {{ ghVar "steps.version.outputs.version" }}
          fileName: 'webkit_linux_x86_64.tar.gz'
          extract: true

      - name: Upload WebKit CLI Artifact
        uses: actions/upload-artifact@v4
        with:
          name: webkit
          path: webkit
          if-no-files-found: error
  secret-scan:
    name: gitleaks
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 0

      - name: Run Gitleaks
        uses: gitleaks/gitleaks-action@v2
        env:
          GITHUB_TOKEN: {{ ghSecret "GITHUB_TOKEN" }}
          GITLEAKS_LICENSE: {{ ghSecret "ORG_GITLEAKS_LICENSE" }}
  detect-changes:
    runs-on: ubuntu-latest
    outputs:
{{- range .Apps }}
      {{ .Name }}-changed: {{ ghVar (printf "steps.filter.outputs.%s" .Name) }}
{{- end }}
      shared-changed: {{ ghVar "steps.filter.outputs.shared" }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Detect Path Changes
        uses: dorny/paths-filter@v3
        id: filter
        with:
          filters: |
{{- range .Apps }}
{{- if .Path }}
            {{ .Name }}:
              - '{{ .Path }}/**'
{{- end }}
{{- end }}
            shared:
              - 'app.json'
              - '.github/workflows/**'
              - '.github/actions/**'
              - 'package.json'
              - 'pnpm-lock.yaml'
              - 'pnpm-workspace.yaml'
              - 'go.mod'
              - 'go.sum'
              - 'turbo.json'

  drift-detection:
    runs-on: ubuntu-latest
    needs: setup-webkit
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Download WebKit CLI Artifact
        uses: actions/download-artifact@v4
        with:
          name: webkit
          path: ./

      - name: Make WebKit executable
        run: chmod +x ./webkit

      - name: Run Drift Detection
        id: drift
        run: |
          # Capture drift output in markdown format
          if ./webkit drift --format=markdown > drift-output.md 2>&1; then
            echo "drift_detected=false" >> $GITHUB_OUTPUT
          else
            echo "drift_detected=true" >> $GITHUB_OUTPUT
          fi

          # Store output for PR comment
          {
            echo 'drift_message<<EOF'
            cat drift-output.md
            echo 'EOF'
          } >> $GITHUB_OUTPUT

      - name: Comment on PR
        if: github.event_name == 'pull_request'
        uses: ./.github/actions/pr-comment
        with:
          body-includes: 'Drift Detection'
          comment-body: {{ ghVar "steps.drift.outputs.drift_message" }}
          issue-number: {{ ghVar "github.event.pull_request.number" }}
          private-key: {{ ghSecret "ORG_GITHUB_APP_PRIVATE_KEY" }}

      - name: Fail Workflow if Drift Detected
        if: steps.drift.outputs.drift_detected == 'true'
        run: |
          echo "游댮 Drift detected in generated files"
          echo "Run 'webkit update' to sync your project with the latest templates"
          exit 1
  app-json-diff:
    runs-on: ubuntu-latest
    needs: setup-webkit
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 0

      - name: Download WebKit CLI Artifact
        uses: actions/download-artifact@v4
        with:
          name: webkit
          path: ./

      - name: Make WebKit executable
        run: chmod +x ./webkit

      - name: Calculate Diff
        id: diff
        run: |
          base="remotes/origin/main"
          output=$(git diff $base $GITHUB_BRANCH -- app.json)

          echo "=== Raw diff output ==="
          echo "$output"
          echo "========================"

          if [[ -n "$output" ]]; then
            echo "diff_found=true" >> $GITHUB_OUTPUT
            {
              echo 'diff_message<<EOF'
              echo "<!-- app-diff -->"
              echo "### app.json has been changed"
              echo ""
              echo "Diff is below. \`a = base branch\`, \`b = this branch\`"
              echo ""
              echo '```diff'
              echo "$output"
              echo '```'
              echo 'EOF'
            } >> $GITHUB_OUTPUT
          else
            echo "diff_found=false" >> $GITHUB_OUTPUT
          fi

      - name: Comment on PR
        if: steps.diff.outputs.diff_found == 'true' && github.event_name == 'pull_request'
        uses: ./.github/actions/pr-comment
        with:
          body-includes: '<!-- app-diff -->'
          comment-body: {{ ghVar "steps.diff.outputs.diff_message" }}
          issue-number: {{ ghVar "github.event.pull_request.number" }}
          private-key: {{ ghSecret "ORG_GITHUB_APP_PRIVATE_KEY" }}
  terraform-plan-production:
    runs-on: ubuntu-latest
    needs: [setup-webkit, detect-changes]
    if: needs.detect-changes.outputs.shared-changed == 'true' && github.actor != 'dependabot[bot]'
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 0  # Full history for accurate comparison with main

      - name: Download WebKit CLI Artifact
        uses: actions/download-artifact@v4
        with:
          name: webkit
          path: ./

      - name: Make WebKit executable
        run: chmod +x ./webkit

      - name: Setup Infrastructure Dependencies
        uses: ./.github/actions/setup-infra
        with:
          terraform_version: {{ ghVar "env.TF_VERSION" }}

      - name: Detect Infrastructure Changes
        id: changes
        uses: ./.github/actions/detect-infra-changes
        with:
          base_ref: origin/main

      - name: Add Analysis to Step Summary
        run: |
          echo "## Infrastructure Change Analysis" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "{{ ghVar "steps.changes.outputs.reason" }}" >> $GITHUB_STEP_SUMMARY

      - name: Run Terraform Plan
        id: plan
        env:
          SOPS_AGE_KEY: {{ ghSecret "ORG_AGE_SECRET" }}
          DO_API_KEY: ${{"{{"}} secrets.REPO_DO_ACCESS_TOKEN || secrets.ORG_DO_ACCESS_TOKEN {{ "}}" }}
          DO_SPACES_ACCESS_KEY: ${{"{{"}} secrets.REPO_DO_SPACES_ACCESS_KEY || secrets.ORG_DO_SPACES_ACCESS_KEY {{ "}}" }}
          DO_SPACES_SECRET_KEY: ${{"{{"}} secrets.REPO_DO_SPACES_SECRET_KEY || secrets.ORG_DO_SPACES_SECRET_KEY {{ "}}" }}
          HETZNER_TOKEN: ${{"{{"}} secrets.REPO_HETZNER_TOKEN || secrets.ORG_HETZNER_TOKEN {{ "}}" }}
          BACK_BLAZE_BUCKET: {{ ghSecret "ORG_BACK_BLAZE_TF_BUCKET" }}
          BACK_BLAZE_KEY_ID: {{ ghSecret "ORG_BACK_BLAZE_KEY_ID" }}
          BACK_BLAZE_APPLICATION_KEY: {{ ghSecret "ORG_BACK_BLAZE_APPLICATION_KEY" }}
          TURSO_TOKEN: {{ ghSecret "ORG_TURSO_TOKEN" }}
          GITHUB_TOKEN: {{ ghSecret "ORG_GITHUB_TOKEN" }}
          GITHUB_TOKEN_CLASSIC: {{ ghSecret "ORG_GITHUB_TOKEN_CLASSIC" }}
          SLACK_BOT_TOKEN: {{ ghSecret "ORG_SLACK_BOT_TOKEN" }}
          SLACK_USER_TOKEN: {{ ghSecret "ORG_SLACK_USER_TOKEN" }}
        run: |
          echo "游댌 Running terraform plan for production environment..."

          # Run webkit infra plan for production.
          if ./webkit infra plan > plan-output.txt 2>&1; then
            plan_exit_code=0
          else
            plan_exit_code=$?
          fi

          # Check if there are changes in the plan output.
          # Terraform outputs "No changes" or shows resources to add/change/destroy.
          if grep -q "No changes" plan-output.txt || grep -q "0 to add, 0 to change, 0 to destroy" plan-output.txt; then
            echo "changes_detected=false" >> $GITHUB_OUTPUT
            status_emoji="游릭"
            status_text="No infrastructure changes"
          else
            # Detect if changes are SHA-only (image tag updates).
            # Look for actual field changes (lines with =) and check if only SHA tag changes exist.
            sha_changes=$(grep -E '^\s*~\s+tag\s+=.*"sha-[a-f0-9]+".*->.*"sha-[a-f0-9]+"' plan-output.txt || true)
            other_changes=$(grep -E '^\s*~\s+\w+\s+=.*' plan-output.txt | grep -v -E 'tag\s+=.*"sha-[a-f0-9]+".*->.*"sha-[a-f0-9]+"' || true)

            # If we have SHA changes but no other changes, it's SHA-only.
            if [ -n "$sha_changes" ] && [ -z "$other_changes" ]; then
              echo "changes_detected=true" >> $GITHUB_OUTPUT
              status_emoji="游릭"
              status_text="SHA-only deployment update"
            else
              echo "changes_detected=true" >> $GITHUB_OUTPUT
              status_emoji="游리"
              status_text="Infrastructure changes detected"
            fi
          fi

          # Format output for PR comment.
          {
            echo 'plan_message<<EOF'
            echo "<!-- terraform-plan -->"
            echo "### Infra Plan"
            echo ""
            echo "$status_emoji **$status_text**"
            echo ""
            echo "**On merge:** {{ ghVar "steps.changes.outputs.reason" }}"
            echo ""
            echo "<details>"
            echo "<summary>View terraform plan output</summary>"
            echo ""
            echo '```hcl'
            cat plan-output.txt
            echo '```'
            echo ""
            echo "</details>"
            echo 'EOF'
          } >> $GITHUB_OUTPUT

          # Only fail if the plan command had a real error (not just changes detected)
          if [ $plan_exit_code -ne 0 ]; then
            echo "丘멆잺 Terraform plan exited with code $plan_exit_code"
            echo "Plan output has been posted as a PR comment for review"
            # Don't fail the workflow - let the PR comment show the error
            # exit $plan_exit_code
          fi

      - name: Comment on PR
        if: github.event_name == 'pull_request'
        uses: ./.github/actions/pr-comment
        with:
          body-includes: '<!-- terraform-plan -->'
          comment-body: {{ ghVar "steps.plan.outputs.plan_message" }}
          issue-number: {{ ghVar "github.event.pull_request.number" }}
          private-key: {{ ghSecret "ORG_GITHUB_APP_PRIVATE_KEY" }}
  validate-app-json:
    runs-on: ubuntu-latest
    needs: setup-webkit
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Download WebKit CLI Artifact
        uses: actions/download-artifact@v4
        with:
          name: webkit
          path: ./

      - name: Make WebKit executable
        run: chmod +x ./webkit

      - name: Run Validation
        id: validate
        run: |
          if ./webkit validate > validation-output.txt 2>&1; then
            echo "validation_failed=false" >> $GITHUB_OUTPUT
            status_emoji="游릭"
            status_text="Validation passed"
          else
            echo "validation_failed=true" >> $GITHUB_OUTPUT
            status_emoji="游댮"
            status_text="Validation failed"
          fi

          {
            echo 'validation_message<<EOF'
            echo "<!-- validation-result -->"
            echo "### app.json Validation"
            echo ""
            echo "$status_emoji **$status_text**"
            echo ""
            echo "<details>"
            echo "<summary>View validation output</summary>"
            echo ""
            echo '```'
            cat validation-output.txt
            echo '```'
            echo ""
            echo "</details>"
            echo 'EOF'
          } >> $GITHUB_OUTPUT

      - name: Comment on PR
        if: github.event_name == 'pull_request'
        uses: ./.github/actions/pr-comment
        with:
          body-includes: '<!-- validation-result -->'
          comment-body: {{ ghVar "steps.validate.outputs.validation_message" }}
          issue-number: {{ ghVar "github.event.pull_request.number" }}
          private-key: {{ ghSecret "ORG_GITHUB_APP_PRIVATE_KEY" }}

      - name: Fail Workflow if Validation Failed
        if: steps.validate.outputs.validation_failed == 'true'
        run: |
          echo "Validation failed. Please fix the errors in app.json"
          exit 1

  claude-code-review:
    # Only run when PR is first opened, not on subsequent commits
    # Skip automated bot PRs (dependabot, ainsley-dev-bot, github-actions)
    if: github.event.action == 'opened' && github.actor != 'dependabot[bot]' && github.actor != 'ainsley-dev-bot[bot]' && github.actor != 'github-actions[bot]'
    runs-on: ubuntu-latest
    permissions:
      contents: read
      pull-requests: read
      issues: read
      id-token: write

    steps:
      - name: Checkout repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 1

      - name: Run Claude Code Review
        id: claude-review
        uses: anthropics/claude-code-action@v1
        with:
          claude_code_oauth_token: {{ ghSecret "ORG_CLAUDE_CODE_TOKEN" }}
          prompt: |
            REPO: {{ ghVar "github.repository" }}
            PR NUMBER: {{ ghVar "github.event.pull_request.number" }}

            Please review this pull request and provide feedback on:
            - Code quality and best practices
            - Potential bugs or issues
            - Performance considerations
            - Security concerns
            - Test coverage

            Use the repository's CLAUDE.md for guidance on style and conventions. Be constructive and helpful in your feedback.

            IMPORTANT: Do not use emojis in your review comments. Keep the feedback professional and text-only.

            Use `gh pr comment` with your Bash tool to leave your review as a comment on the PR.

          # See https://github.com/anthropics/claude-code-action/blob/main/docs/usage.md
          # or https://docs.claude.com/en/docs/claude-code/cli-reference for available options
          claude_args: '--allowed-tools "Bash(gh issue view:*),Bash(gh search:*),Bash(gh issue list:*),Bash(gh pr comment:*),Bash(gh pr diff:*),Bash(gh pr view:*),Bash(gh pr list:*)"'
{{ range $app := .Apps }}
  app-{{ .Name | lower }}:
    runs-on: ubuntu-latest
    needs: detect-changes
    if: needs.detect-changes.outputs.{{ .Name }}-changed == 'true' || needs.detect-changes.outputs.shared-changed == 'true'
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 0
{{- if eq $app.Language "js" }}

      - name: Install pnpm
        uses: pnpm/action-setup@v4

      - name: Set up Node
        uses: actions/setup-node@v4
        with:
          node-version: '22'
          cache: 'pnpm'

      - name: Install dependencies
        run: pnpm install
{{- else if eq $app.Language "go" }}

      - name: Set up Go
        uses: actions/setup-go@v5
        with:
          go-version: '1.25'

{{- if gt (len $app.Tools) 0 }}
      - name: Install Build Tools
        run: |
{{- range $app.InstallCommands }}
          {{ . }}
{{- end }}
{{- end }}
{{- end }}

{{- range $spec := $app.OrderedCommands }}
{{- if not $spec.Disabled }}

      - name: {{ $spec.Name | title }}
{{- if $app.Path }}
        working-directory: {{ $app.Path }}
{{- end }}
        run: {{ $spec.Cmd }}
{{- end }}
{{- end }}
{{- end }}

{{- range $app := .PayloadPostgresApps }}
  migration-check-{{ $app.App.Name }}:
    runs-on: ubuntu-latest
    needs: detect-changes
    if: needs.detect-changes.outputs.{{ $app.App.Name }}-changed == 'true' || needs.detect-changes.outputs.shared-changed == 'true'
    env:
      DO_ACCESS_TOKEN: ${{"{{"}} secrets.REPO_DO_ACCESS_TOKEN || secrets.ORG_DO_ACCESS_TOKEN {{ "}}" }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Install pnpm
        uses: pnpm/action-setup@v4

      - name: Install dependencies (Dependabot)
        if: github.actor == 'dependabot[bot]'
{{- if $app.App.Path }}
        working-directory: {{ $app.App.Path }}
{{- end }}
        run: pnpm install --no-frozen-lockfile

      - name: Install dependencies (Regular)
        if: github.actor != 'dependabot[bot]'
{{- if $app.App.Path }}
        working-directory: {{ $app.App.Path }}
{{- end }}
        run: pnpm install

      - name: Add Runner IP to Database
        uses: ./.github/actions/db-add-ip
        with:
          database-id: {{ ghSecret (index $app.Secrets "DatabaseID") }}
          doctl-token: {{ ghEnv "DO_ACCESS_TOKEN" }}

      - name: Check for pending migrations
        id: migration
        env:
          DATABASE_URL: {{ ghSecret (index $app.Secrets "DatabaseURL") }}
          # PAYLOAD_SECRET is required by Payload but doesn't need to be the real value
          # for migration generation. A random value per run is sufficient.
          PAYLOAD_SECRET: migration-check-{{ ghVar "github.run_id" }}-{{ ghVar "github.run_attempt" }}
{{- if $app.App.Path }}
        working-directory: {{ $app.App.Path }}
{{- end }}
        run: |
          echo "游댍 Checking for pending migrations..."
          output=$(pnpm migrate:create 2>&1 || true)
          echo "$output"

          if echo "$output" | grep -q "No schema changes detected"; then
            echo "游릭 No pending migrations detected"
            echo "result=pass" >> $GITHUB_OUTPUT
          else
            echo "游댮 Schema changes detected! Please run migrations locally."
            echo "result=fail" >> $GITHUB_OUTPUT

            echo "---- Generated Migration Files ----"
            ls -t src/migrations | head -n 1 | while read file; do
              echo "游늯 $file"
              echo "---------------------------------"
              cat "src/migrations/$file"
              echo "---------------------------------"
            done
            exit 1
          fi

      - name: Format Migration Comment
        if: always()
        id: format-comment
        run: |
          result="{{ ghVar "steps.migration.outputs.result" }}"
          if [[ "$result" == "fail" ]]; then
            message="游댮 **Schema changes detected!** Please run \`pnpm migrate:create\`, commit the migration, and push."
          elif [[ "$result" == "pass" ]]; then
            message="游릭 **No pending migrations detected.** All clear to merge!"
          else
            message="丘멆잺 Migration check did not run correctly."
          fi

          {
            echo 'comment_body<<EOF'
            echo "### Migration Check - {{ $app.App.Title }}"
            echo "$message"
            echo 'EOF'
          } >> $GITHUB_OUTPUT

      - name: Comment on PR
        if: always() && github.event_name == 'pull_request'
        uses: ./.github/actions/pr-comment
        with:
          body-includes: 'Migration Check - {{ $app.App.Title }}'
          comment-body: {{ ghVar "steps.format-comment.outputs.comment_body" }}
          issue-number: {{ ghVar "github.event.pull_request.number" }}
          private-key: {{ ghSecret "ORG_GITHUB_APP_PRIVATE_KEY" }}

      - name: Remove Runner IP from Database
        if: always()
        uses: ./.github/actions/db-remove-ip
        with:
          database-id: {{ ghSecret (index $app.Secrets "DatabaseID") }}
          doctl-token: {{ ghEnv "DO_ACCESS_TOKEN" }}
{{- end }}
