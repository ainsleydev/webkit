name: PR

on:
  workflow_dispatch:
  pull_request:
    branches:
      - main
      - master

# Only allow one of these to run per branch
concurrency:
  group: {{ ghVar "github.workflow" }}-{{ ghVar "github.ref" }}
  cancel-in-progress: true

permissions:
  contents: read
  pull-requests: write
  issues: write

jobs:
  setup-webkit:
    runs-on: ubuntu-latest
    outputs:
      version: {{ ghVar "steps.version.outputs.version" }}
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Read WebKit Version
        id: version
        shell: bash
        run: |
          WEBKIT_VERSION=$(jq -r '.webkit_version // "latest"' "app.json")
          echo "version=$WEBKIT_VERSION" >> $GITHUB_OUTPUT
          echo "Detected WebKit version: $WEBKIT_VERSION"

      - name: Download WebKit Release Asset
        id: setup
        uses: robinraju/release-downloader@v1
        with:
          repository: 'ainsleydev/webkit'
          tag: {{ ghVar "steps.version.outputs.version" }}
          fileName: 'webkit_linux_x86_64.tar.gz'
          extract: true

      - name: Upload WebKit CLI Artifact
        uses: actions/upload-artifact@v4
        with:
          name: webkit
          path: webkit
          if-no-files-found: error

  secret-scan:
    name: gitleaks
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 0

      - name: Run Gitleaks
        uses: gitleaks/gitleaks-action@v2
        env:
          GITHUB_TOKEN: {{ ghSecret "GITHUB_TOKEN" }}
          GITLEAKS_LICENSE: {{ ghSecret "ORG_GITLEAKS_LICENSE" }}

  drift-detection:
    runs-on: ubuntu-latest
    needs: setup-webkit
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5

      - name: Download WebKit CLI Artifact
        uses: actions/download-artifact@v4
        with:
          name: webkit
          path: ./

      - name: Make WebKit executable
        run: chmod +x ./webkit

      - name: Run Drift Detection
        id: drift
        run: |
          # Capture drift output in markdown format
          if ./webkit drift --format=markdown > drift-output.md 2>&1; then
            echo "drift_detected=false" >> $GITHUB_OUTPUT
          else
            echo "drift_detected=true" >> $GITHUB_OUTPUT
          fi

          # Store output for PR comment
          {
            echo 'drift_message<<EOF'
            cat drift-output.md
            echo 'EOF'
          } >> $GITHUB_OUTPUT

      - name: Comment on PR
        if: github.event_name == 'pull_request'
        uses: ./.github/actions/pr-comment
        with:
          body-includes: 'WebKit Drift'
          comment-body: {{ ghVar "steps.drift.outputs.drift_message" }}
          issue-number: {{ ghVar "github.event.pull_request.number" }}
          private-key: {{ ghSecret "ORG_GITHUB_APP_PRIVATE_KEY" }}

      - name: Fail Workflow if Drift Detected
        if: steps.drift.outputs.drift_detected == 'true'
        run: |
          echo "âŒ Drift detected in WebKit-generated files"
          echo "Run 'webkit update' to sync your project with the latest templates"
          exit 1

  app-json-diff:
    runs-on: ubuntu-latest
    needs: setup-webkit
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 0

      - name: Download WebKit CLI Artifact
        uses: actions/download-artifact@v4
        with:
          name: webkit
          path: ./

      - name: Make WebKit executable
        run: chmod +x ./webkit

      - name: Calculate Diff
        id: diff
        run: |
          base="remotes/origin/main"
          output=$(git diff $base $GITHUB_BRANCH -- app.json)

          echo "=== Raw diff output ==="
          echo "$output"
          echo "========================"

          if [[ -n "$output" ]]; then
            echo "diff_found=true" >> $GITHUB_OUTPUT
            {
              echo 'diff_message<<EOF'
              echo "<!-- app-diff -->"
              echo "### app.json has been changed"
              echo ""
              echo "Diff is below. \`a = base branch\`, \`b = this branch\`"
              echo ""
              echo '```diff'
              echo "$output"
              echo '```'
              echo 'EOF'
            } >> $GITHUB_OUTPUT
          else
            echo "diff_found=false" >> $GITHUB_OUTPUT
          fi

      - name: Comment on PR
        if: steps.diff.outputs.diff_found == 'true' && github.event_name == 'pull_request'
        uses: ./.github/actions/pr-comment
        with:
          body-includes: '<!-- app-diff -->'
          comment-body: {{ ghVar "steps.diff.outputs.diff_message" }}
          issue-number: {{ ghVar "github.event.pull_request.number" }}
          private-key: {{ ghSecret "ORG_GITHUB_APP_PRIVATE_KEY" }}

	{{- range $app := .Apps }}
  app-{{ .Name | lower }}:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 0
{{- if eq $app.Language "js" }}

      - name: Install pnpm
        uses: pnpm/action-setup@v4

      - name: Set up Node
        uses: actions/setup-node@v4
        with:
          node-version: '22'
          cache: 'pnpm'

      - name: Install dependencies
        run: pnpm install
{{- else if eq $app.Language "go" }}

      - name: Set up Go
        uses: actions/setup-go@v5
        with:
          go-version: '1.25'
{{- end }}

{{- range $spec := $app.OrderedCommands }}
{{- if not $spec.Disabled }}

      - name: {{ $spec.Name | title }}
{{- if $app.Path }}
        working-directory: {{ $app.Path }}
{{- end }}
        run: {{ $spec.Cmd }}
{{- end }}
{{- end }}
{{- end }}

{{- range $appWithDB := .AppsWithDBs }}
  migration-check-{{ $appWithDB.App.Name }}:
    name: Migration Check - {{ $appWithDB.App.Title }}
    runs-on: ubuntu-latest
    steps:
      - name: Checkout Repository
        uses: actions/checkout@v5
        with:
          fetch-depth: 0

      - name: Install pnpm
        uses: pnpm/action-setup@v4

      - name: Install dependencies (Dependabot)
        if: {{ ghVar "github.actor" }} == 'dependabot[bot]'
{{- if $appWithDB.App.Path }}
        working-directory: {{ $appWithDB.App.Path }}
{{- end }}
        run: pnpm install --no-frozen-lockfile

      - name: Install dependencies (Regular)
        if: {{ ghVar "github.actor" }} != 'dependabot[bot]'
{{- if $appWithDB.App.Path }}
        working-directory: {{ $appWithDB.App.Path }}
{{- end }}
        run: pnpm install

      - name: Add Runner IP to Database
        uses: ./.github/actions/db-add-ip
        with:
          database-id: {{ ghSecret (index $appWithDB.Secrets "DatabaseID") }}
          doctl-token: {{ ghSecret "DO_ACCESS_TOKEN" }}

      - name: Check for pending migrations
        id: migration
        env:
          DATABASE_URL: {{ ghSecret (index $appWithDB.Secrets "DatabaseURL") }}
          PAYLOAD_SECRET: {{ ghSecret "CMS_PAYLOAD_SECRET" }}
{{- if $appWithDB.App.Path }}
        working-directory: {{ $appWithDB.App.Path }}
{{- end }}
        run: |
          echo "ðŸ”Ž Checking for pending migrations..."
          output=$(pnpm migrate:create 2>&1 || true)
          echo "$output"

          if echo "$output" | grep -q "No schema changes detected"; then
            echo "âœ… No pending migrations detected"
            echo "result=pass" >> $GITHUB_OUTPUT
          else
            echo "âŒ Schema changes detected! Please run migrations locally."
            echo "result=fail" >> $GITHUB_OUTPUT

            echo "---- Generated Migration Files ----"
            ls -t src/migrations | head -n 1 | while read file; do
              echo "ðŸ“„ $file"
              echo "---------------------------------"
              cat "src/migrations/$file"
              echo "---------------------------------"
            done
            exit 1
          fi

      - name: Comment on PR
        if: always()
        uses: actions/github-script@v7
        with:
          github-token: {{ ghSecret "GITHUB_TOKEN" }}
          script: |
            const result = "{{ ghVar "steps.migration.outputs.result" }}";
            const body = result === "fail"
              ? "âŒ **Schema changes detected!** Please run `pnpm migrate:create`, commit the migration, and push."
              : result === "pass"
              ? "âœ… **No pending migrations detected.** All clear to merge!"
              : "âš ï¸ Migration check did not run correctly.";

            const {{ "{" }} data: comments {{ "}" }} = await github.rest.issues.listComments({{ "{" }}
              ...context.repo,
              issue_number: context.issue.number
            {{ "}" }});

            const existing = comments.find(c => c.body.includes("Migration Check - {{ $appWithDB.App.Title }}"));
            if (existing) {{ "{" }}
              await github.rest.issues.updateComment({{ "{" }}
                ...context.repo,
                comment_id: existing.id,
                body: `### Migration Check - {{ $appWithDB.App.Title }}\n${body}`
              {{ "}" }});
            {{ "}" }} else {{ "{" }}
              await github.rest.issues.createComment({{ "{" }}
                ...context.repo,
                issue_number: context.issue.number,
                body: `### Migration Check - {{ $appWithDB.App.Title }}\n${body}`
              {{ "}" }});
            {{ "}" }}

      - name: Remove Runner IP from Database
        if: always()
        uses: ./.github/actions/db-remove-ip
        with:
          database-id: {{ ghSecret (index $appWithDB.Secrets "DatabaseID") }}
          doctl-token: {{ ghSecret "DO_ACCESS_TOKEN" }}
{{- end }}
